<h1>Articles Listing</h1>
<%= link_to 'new article', new_article_path %>
<table>
  <tr>
    <th>title</th>
    <th>text</th>
    <th colspan="2"></th>
  </tr>
  <% @articles.each do |a| %>
  <tr>
    <td><%= a.title %></td>
    <td><%= a.text %></td>
    <td>
      <%= link_to 'Show', article_path(a) %>
    </td>
    <td>
      <%= link_to 'Edit', edit_article_path(a) %>
    </td>
  </tr>
  <% end %>
</table>